datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model JwtSampleUser {
  id        Int             @id @default(autoincrement())
  createdAt DateTime        @default(now())
  email     String          @unique
  password  String
  tasks     JwtSampleTask[]
}

model JwtSampleTask {
  id        Int           @id @default(autoincrement())
  createdAt DateTime      @default(now())
  title     String
  completed Boolean       @default(false)
  user      JwtSampleUser @relation(fields: [userId], references: [id])
  userId    Int
}
